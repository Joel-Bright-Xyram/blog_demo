<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>Posts</h1>

  <div id="posts" class="container">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show post #{post.id}", post %>
      </p>
    <% end %>
  </div>
  <%= link_to "New post", new_post_path %>
</div>

